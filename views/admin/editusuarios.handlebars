<h3>Editar Conta:</h3>
<div class="card">
    <div class="card-body">
            <form action="/admin/editusuario" method="post">
                <label for="nome">Nome: </label>
                    <input type="text" name="nome" class="form-control" value="{{usuario.nome}}" required>
                <label for="email">Email: </label>
                    <input type="email" name="email" class="form-control" value="{{usuario.email}}" required>
                <input type="hidden" name="id" value="{{usuario._id}}">
                {{#if usuario.eAdmin}}
                    <div class="btn-group btn-group-toggle mt-4" data-toggle="buttons">
                            <label class="btn btn-secondary active">
                                <input type="radio" name="eAdmin" id="option1" autocomplete="off" value="1" checked> Administrador
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="eAdmin" id="option2" autocomplete="off" value="0"> Usuario Padrão
                            </label>
                    </div>
                {{else}}
                    <div class="btn-group btn-group-toggle mt-4" data-toggle="buttons">
                        <label class="btn btn-secondary">
                            <input type="radio" name="eAdmin" id="option1" autocomplete="off" value="1" > Administrador
                        </label>
                        <label class="btn btn-secondary active">
                            <input type="radio" name="eAdmin" id="option2" autocomplete="off" value="0" checked> Usuario Padrão
                        </label>
                </div>
                {{/if}}
                <br>
                <div class="btn-group mt-3">
                    <button type="submit" class="btn btn-outline-success m-1">Editar usuario</button>
                
                 </form>
                    <form action="/admin/deleteuser" method="post">
                    <input type="hidden" name="id" value="{{usuario._id}}">
                    <button type="submit" class="btn btn-outline-danger m-1">Deletar usuario</button>
                    </form>
                </div>
    </div>
</div>